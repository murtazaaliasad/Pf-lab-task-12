#include <stdio.h>
#include <stdlib.h>

int main() {
    int size = 5;
    int *arr = NULL;

    printf("--- Phase 1: Using calloc (Zero-Initialization) ---\n");

    arr = (int *)calloc(size, sizeof(int));

    if (arr == NULL) {
        printf("Initial memory allocation failed.\n");
        return 1;
    }

    printf("Array initialized by calloc (all zeros):\n");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    for (int i = 0; i < size; i++) {
        arr[i] = i * 10;
    }

    printf("Array after modification:\n");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    free(arr);
    printf("Memory for the first array freed.\n");

    printf("\n--- Phase 2: Reusing the Pointer with malloc ---\n");

    arr = (int *)malloc(size * sizeof(int));

    if (arr == NULL) {
        printf("Second memory allocation failed.\n");
        return 1;
    }

    printf("Array allocated by malloc (contains garbage data):\n");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    for (int i = 0; i < size; i++) {
        arr[i] = i + 100;
    }

    printf("Second array after modification:\n");
    for (int i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    free(arr);
    printf("Memory for the second array freed.\n");

    return 0;
}
