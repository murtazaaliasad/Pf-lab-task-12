#include <stdio.h>
#include <stdlib.h>

long long calculateFactorial(int n) {
    if (n < 0) {
        return 0;
    }
    if (n == 0 || n == 1) {
        return 1;
    }

    long long result = 1;

    for (int i = 2; i <= n; i++) {
        result *= i;
    }

    return result;
}

int main() {
    int num;

    printf("Enter a non-negative integer to calculate its factorial: ");

    if (scanf("%d", &num) != 1) {
        printf("Invalid input. Please enter an integer.\n");
        return 1;
    }

    if (num < 0) {
        printf("Factorial is only defined for non-negative integers.\n");
        return 1;
    }

    if (num > 20) {
        printf("Warning: The factorial for numbers greater than 20 may exceed the capacity of long long.\n");
    }

    long long factorialResult = calculateFactorial(num);

    printf("The factorial of %d is %lld\n", num, factorialResult);

    return 0;
}
