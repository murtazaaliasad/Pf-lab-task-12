#include <stdio.h>
#include <string.h>
#include <ctype.h>

int is_palindrome_recursive(const char *str, int start, int end) {
    if (start >= end) {
        return 1;
    }

    char char_start = tolower(str[start]);
    char char_end = tolower(str[end]);

    if (char_start != char_end) {
        return 0;
    }

    return is_palindrome_recursive(str, start + 1, end - 1);
}

int is_palindrome(const char *str) {
    int len = strlen(str);
    if (len == 0) {
        return 1;
    }
    return is_palindrome_recursive(str, 0, len - 1);
}

int main() {
    char s[100];

    printf("Enter a string to check if it's a palindrome: ");
    if (scanf("%99s", s) != 1) {
        return 1;
    }

    int result = is_palindrome(s);

    if (result) {
        printf("\"%s\" is a palindrome (1).\n", s);
    } else {
        printf("\"%s\" is not a palindrome (0).\n", s);
    }

    return 0;
}
